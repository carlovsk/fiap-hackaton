{
  "name": "fiap-hackaton",
  "version": "1.0.0",
  "description": "Projeto desenvolvido no Hackaton do curso 9SOAT da FIAP.",
  "license": "ISC",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "type-check": "tsc --noEmit",
    "lint": "npm run lint --workspaces --if-present",
    "lint:fix": "npm run lint:fix --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "test:fix": "npm run test:fix --workspaces --if-present",
    "format": "npm run format --workspaces --if-present",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "clean": "npm run clean --workspaces --if-present",
    "build": "npm run build --workspaces --if-present",
    "infra:setup-state": "./infra/scripts/setup-remote-state.sh",
    "docker:up": "cd infra/docker && docker-compose -f docker-compose-simple.yml up -d",
    "docker:down": "cd infra/docker && docker-compose -f docker-compose-simple.yml down",
    "docker:logs": "cd infra/docker && docker-compose -f docker-compose-simple.yml logs -f",
    "docker:build": "cd infra/docker && docker-compose -f docker-compose-simple.yml build",
    "docker:restart": "cd infra/docker && docker-compose -f docker-compose-simple.yml restart",
    "infra:init": "cd infra/terraform && terraform init",
    "infra:init-clean": "cd infra/terraform && rm -rf .terraform .terraform.lock.hcl terraform.tfstate* && terraform init",
    "infra:validate": "cd infra/terraform && terraform validate",
    "infra:fmt": "cd infra/terraform && terraform fmt -recursive",
    "infra:plan": "cd infra/terraform && terraform plan",
    "infra:apply": "cd infra/terraform && terraform apply",
    "infra:apply-auto": "cd infra/terraform && terraform apply -auto-approve",
    "infra:destroy": "cd infra/terraform && terraform destroy",
    "infra:output": "cd infra/terraform && terraform output",
    "infra:unlock": "cd infra/terraform && terraform force-unlock",
    "infra:deploy": "./infra/scripts/deploy.sh",
    "setup:branch-protection": "./.github/scripts/setup-branch-protection.sh",
    "infra:cleanup": "./infra/scripts/cleanup.sh",
    "prepare": "husky install"
  },
  "dependencies": {
    "axios": "^1.9.0",
    "electrodb": "^3.4.1",
    "luxon": "^3.6.1",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.23.0",
    "@tsconfig/node22": "^22.0.0",
    "@types/aws-lambda": "^8.10.108",
    "@types/luxon": "^3.4.2",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.24.0",
    "@typescript-eslint/parser": "^8.24.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.3",
    "globals": "^16.0.0",
    "prettier": "^3.5.1",
    "type-fest": "^4.34.1",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.28.0",
    "vitest": "^1.6.1",
    "husky": "^9.0.11"
  }
}

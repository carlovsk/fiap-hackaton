{
  "name": "@fiap-hackaton/user",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "nodemon --watch src --ext ts --exec tsx src/server.ts",
    "build": "tsc",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "lint:check": "eslint src/**/*.ts --max-warnings 0",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "eslintConfig": {
    "extends": "./.eslintrc.cjs"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "nodemon": "^3.1.10",
    "prettier": "^3.5.1",
    "prisma": "^6.10.1",
    "tsx": "^4.20.3"
  },
  "dependencies": {
    "@prisma/client": "^6.10.1",
    "dotenv": "^17.0.0",
    "express": "^5.1.0",
    "luxon": "^3.6.1",
    "tslog": "^4.9.3",
    "zod": "^3.24.2"
  }
}
